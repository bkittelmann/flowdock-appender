<configuration>
    <!--<statusListener class="ch.qos.logback.core.status.NopStatusListener"/>-->

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%thread] %-5level %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="FLOWDOCK" class="com.bitmoving.util.FlowdockAppender">
        <encoder>
            <pattern>%msg</pattern>
        </encoder>
        <flowToken>3598d173082bd7777eede71bd5087770</flowToken>
        <author>frontend-server-2</author>
    </appender>

    <logger name="com.bitmoving.util" level="DEBUG">
        <appender-ref ref="FLOWDOCK"/>
    </logger>

    <logger name="com.ning" level="WARN">
        <appender-ref ref="STDOUT"/>
    </logger>

</configuration>